<div class="container">
<div class="burger hero">
  <div class="burger-image">
    <h1 class="burger-title-first">Boots</h1>
    <img src="https://www.lucchese.com/media/cache/24/bd/24bdf81e45bd58ee063abb8d4f8ab59a.jpg" width="100%">
  </div>
    
    <h1 class="burger-title-last">For Less</h1>
</div>  

<div class="row">
  <div class="col-md-8">
    <div class="option-toggle">
        <div class="panel panel-default">
          <div class="panel-heading">Filter Options</div>
            <div class="panel-body">
                 <form action="/scrape" method="POST"> 
                    <div class="form-group row">
                      <label for="gender" class="col-sm-2 col-form-label">Gender</label>
                      <div class="col-sm-10">
                        <select name="gender">
                        <option value="women" name="women">Women</option>
                        <option value="men" name="men">Men</option>
                      </select> 
                      </div>
                    </div>
                    <div class="form-group row">
                      <label for="shoeSize" class="col-sm-2 col-form-label">Shoe Size:</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control size-options" id="size-options" name="size" placeholder="Enter Size Here">
                      </div>
                    </div>
                    <button type="submit" id="filter-search" name="filter-search">Search</button>

                 </form> 

                 {{!-- <form action="/reset" method="DELETE">
                      <button type="submit" id="reset-search" name="reset-search">Reset</button>
                    </form> --}}
            </div>
      </div>
    </div>
     {{#each boots}}
    <div class="row">
      <div class="col-md-4">
        <a href="{{this.link}}" target="_blank"><img src="{{this.image}}" width="100%"></a>
      </div>
        <div class="col-md-8">
          <div id="boots">
            <form action="/" method="GET">
              <a class="sendTitle" href="/title/{{this.id}}"><h4 class="boots-name">{{this.title}}</h4></a>
            </form>
              <a href="{{this.link}}" target="_blank"><p>View More</p></a>
              <p>Price: {{this.price}}</p>
              <a href = "mailto:abc@example.com?Subject=I%love%Luccheses!&body={{this.link}}">Email</a>
              <form action="/watch/{{this.id}}" method="POST">
                <button type="submit" id="watch" name="watch">Watch</button>
              </form>
          </div>
      </div>
    </div>
  {{/each}} 
  </div>

