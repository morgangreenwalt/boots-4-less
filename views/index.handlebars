<div class="container">
  {{> nav}}

<div class="row">
  <div class="col-md-12">
    <div class="option-toggle">
        <div class="panel panel-default">
          <div class="panel-heading">Filter Options</div>
            <div class="panel-body">
                 <form action="/scrape" method="POST"> 
                    <div class="form-group row">
                      <label for="gender" class="col-sm-2 col-form-label">Gender:</label>
                      <div class="col-sm-10">
                        <select name="gender">
                        <option value="women" name="women">Women</option>
                        <option value="men" name="men">Men</option>
                      </select> 
                      </div>
                    </div>
                    <div class="form-group row">
                      <label for="shoeSize" class="col-sm-2 col-form-label">Shoe Size:</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control size-options" id="size-options" name="size" placeholder="Enter Size Here">
                      </div>
                    </div>
                    <button type="submit" class="btn btn-secondary" id="filter-search" name="filter-search">Search</button>
                </form> 
            </div>
        </div>
    </div>
     {{#each boots}}
    <div class="row">
      <div class="col-md-4">
        <a href="{{this.link}}" target="_blank"><img class="img-responsive" src="{{this.image}}" alt="https://www.lucchese.com/media/cache/3a/33/3a33ca3714c65fd38e3e9b306fb44292.jpg" width="100%"></a>
      </div>
        <div class="col-md-8">
          <div id="boots">
            <form action="/" method="GET">
              <h4 class="boots-name">{{this.title}}</h4>
            </form>
              <a href="{{this.link}}" target="_blank"><p>View More</p></a>
              <p>Price: {{this.price}}</p>
              <form action="/watch/{{this.id}}" method="POST">
                <button type="submit" id="watch" class="btn btn-secondary" name="{{this.id}}">Watch</button>
              </form>
          </div>
      </div>
    </div>
  {{/each}} 
  </div>
</div>  
